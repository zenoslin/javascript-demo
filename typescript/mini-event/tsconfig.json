{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "lib": ["es6"]
  },
  "include": ["src/main.ts"]
}
